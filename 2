#include "stdafx.h"
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int n, x,l,k=1;
	cout << "Введите размер массива: ";
	cin >> n;
	int* a = new int[n];
	cout << "Заполните массив: ";
	for (int i = 0; i < n; i++) {
		cin >> a[i];
	}
	cout << "Введите L(>0): ";
	cin >> l;
	for (int i = 1;i < n;i++) {
		if (a[i] != a[i - 1]) {
			k++;
		}
	}
	int* b = new int[k];
	for (int i = 0;i < k;i++) {
		b[i] = 1;
	}
	for (int i = 1,j=0;i < n;i++) {
		if (a[i] != a[i - 1]) {
			j++;
		}
		else
		{
			b[j]++;
		}
	}
	for (int i = 0;i < k;i++) {
		if (b[i]>l) {
			b[i] = 0;
		}
	}
	for (int i = 0; i < k; i++) {
		cout << b[i] <<"\t";
	}
	cout << endl;
	delete[]a;
	delete[]b;
}
