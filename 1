#include "stdafx.h"
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int n, x=1;
	cout << "Введите размер массива A: ";
	cin >> n;
	int* a = new int[n];
	cout << "Заполните массив: ";
	for (int i = 0; i < n; i++) {
		cin >> a[i];
	}
	for (int i = 1; i < n; i++) {
		if (a[i]!=a[i-1]) {
			x++;
		}
	}
	int* b = new int[x];
	int* c = new int[x];
	b[0] = a[0];
	for (int i = 0;i < x;i++) {
		c[i] = 1;
	}
	for (int i=1,j=1,l=0;i < n;i++) {
		if (a[i]!=a[i-1]) {
			b[j] = a[i];
			j++;
			l++;
		}
		else
		{
			c[l]++;
		}
	}
	for (int i = 0; i < x; i++) {
		cout << b[i] <<"\t";
	}
	cout << endl;
	for (int i = 0; i < x; i++) {
		cout << c[i] << "\t";
	}
	cout << endl;
	delete[]a;
	delete[]b;
	delete[]c;
}
